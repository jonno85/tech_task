{
  "name": "qonto_technical_task",
  "version": "1.0.0",
  "description": "Qonto technical assignment",
  "main": "./src/index.ts",
  "scripts": {
    "pretest": "NODE_ENV=test ts-node src/database/scripts/setup.ts",
    "test": "NODE_ENV=test jest --forceExit",
    "build": "tsc",
    "dev": "NODE_ENV=localhost nodemon",
    "migrate:up": "NODE_ENV=localhost knex migrate:latest",
    "migrate:create": "NODE_ENV=localhost knex migrate:make -x ts"
  },
  "pre-commit": [
    "lint",
    "test",
    "build"
  ],
  "keywords": [],
  "author": "Jonathan Filippini",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "debug": "^4.3.4",
    "jest": "^27.5.1",
    "pre-commit": "^1.2.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-eslint-rules": "^5.4.0"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@types/ajv": "^1.0.0",
    "@types/config": "0.0.36",
    "@types/log4js": "^2.3.5",
    "@types/pg": "^7.11.2",
    "ajv": "^6.10.2",
    "config": "^3.3.7",
    "express": "^4.17.3",
    "http": "0.0.0",
    "http-errors": "^2.0.0",
    "knex": "^1.0.4",
    "log4js": "^6.1.0",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3",
    "ramda": "^0.26.1",
    "typescript": "^4.6.2",
    "zod": "^3.14.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/database/scripts/**",
      "!**/database/migrations/**"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "timers": "modern"
  },
  "volta": {
    "node": "14.19.1"
  }
}
